<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="IconButton">
        <item name="android:textColor">#1d3a1d</item>
        <item name ="android:textSize">18sp</item>
        <item name = "android:background">@drawable/style_button</item>
        <item name= "android:layout_gravity">center</item>
    </style>
    <style name="BrightIconButton">
        <item name="android:textColor">#1d3a1d</item>
        <item name ="android:textSize">25sp</item>
        <item name = "android:background">@drawable/style_bright_button</item>
        <item name= "android:layout_gravity">center</item>
    </style>
    <style name="PracticeIconButton">
        <item name="android:textColor">#1d3a1d</item>
        <item name ="android:textSize">25sp</item>
        <item name = "android:background">@drawable/style_practice_button</item>
        <item name= "android:layout_gravity">center</item>
    </style>

    <style name="DialogTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>